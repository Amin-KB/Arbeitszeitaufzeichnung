@model List<Arbeitszeitaufzeichnung.Models.ViewModels.TimeStampVM>

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this items?</h3>
<div>
    <hr />
    <table class="table">
        <tr>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model[0].Employee)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model[0].Time)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model[0].Status)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-sm-10">
                    @Html.DisplayFor(modelitem => item.EmployeeName)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(modelitem => item.Time)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(modelitem => item.Status.Name)
                </td>
            </tr>
        }
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model[0].Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
